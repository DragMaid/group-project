model Subject {
  id           String     @id @map("subject_code")
  name         String
  description  String     @default("")
  departmentId Int
  posts        Post[]
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)
}

model Department {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  subjects    Subject[]
}
