model Subject {
  id          String  @id @map("subject_code")
  name        String
  description String?

  department   Department @relation(fields: [departmentId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  departmentId Int

  posts Post[]
}

model Department {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  subjects Subject[]
}
