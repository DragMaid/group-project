{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["node", "jest"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/api*": ["./apps/api/*"],
      "@ui/*": ["./packages/ui/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
