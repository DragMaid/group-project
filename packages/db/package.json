{
  "name": "@db",
  "scripts": {
    "db:up": "docker-compose up db -d --remove-orphans",
    "db:down": "docker-compose db down",
    "db:build": "docker-compose build",
    "migrate": "prisma migrate dev --schema=prisma/schema",
    "generate": "prisma generate --schema=prisma/schema",
    "reset": "prisma migrate reset --schema=prisma/schema",
    "push": "prisma db push --schema=prisma/schema",
    "studio": "prisma studio --schema=prisma/schema",
    "format": "prisma format --schema=prisma/schema",
    "seed": "ts-node seed.ts",
    "test": "pnpm dotenv-flow -e .env -- pnpm jest --coverage"
  },
  "dependencies": {
    "@root": "workspace:*",
    "@prisma/client": "^5.22.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "dotenv": "^16.5.0",
    "dotenv-flow-cli": "^1.1.1",
    "@prisma/client": "^5.22.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.0.0"
  }
}
