{
    "name": "katoassign",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "clean": "turbo clean",
        "app:test": "turbo test --filter=@webapp",
        "test": "turbo test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prettier-check": "prettier --check \"**/*.{ts,tsx,md}\"",
        "db:test": "pnpm dotenv-flow -e .env -- pnpm test --filter=@db",
        "db:up": "pnpm dotenv-flow -e .env -- docker-compose -f ./docker/db.docker-compose.yaml up db -d --remove-orphans --build",
        "db:down": "docker-compose -f ./docker/db.docker-compose.yaml db down",
        "db:log": "pnpm dotenv-flow -e .env -- docker-compose -f ./docker/db.docker-compose.yaml logs db",
        "db:generate": "pnpm dotenv-flow -e .env -- pnpm --filter=@db generate",
        "db:migrate": "pnpm dotenv-flow -e .env -- pnpm --filter=@db migrate",
        "db:reset": "pnpm dotenv-flow -e .env -- pnpm --filter=@db reset",
        "db:push": "pnpm dotenv-flow -e .env -- pnpm --filter=@db push",
        "db:studio": "pnpm dotenv-flow -e .env -- pnpm --filter=@db studio",
        "db:format": "pnpm dotenv-flow -e .env -- pnpm --filter=@db format",
        "db:seed": "pnpm db:reset && pnpm dotenv-flow -e .env -- pnpm --filter=@db seed",
        "web:up": "pnpm dotenv-flow -e .env -- docker-compose -f ./docker/web.docker-compose.yaml up web --remove-orphans --build",
        "web:down": "docker-compose -f ./docker/web/docker-compose.yaml web down",
        "web:log": "pnpm dotenv-flow -e .env -- docker-compose -f ./docker/web.docker-compose.yaml logs web",
        "docker:clean": "docker system prune -a -f --volumes"
    },
    "resolutions": {},
    "packageManager": "pnpm@10.10.0",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@faker-js/faker": "^9.8.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.27.0",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.5.3",
        "react": "^19.1.0",
        "ts-jest": "^29.3.4",
        "turbo": "^2.5.3",
        "typescript": "^5.8.3"
    },
    "workspaces": [
        "packages/*",
        "apps/*",
        "docs"
    ]
}
